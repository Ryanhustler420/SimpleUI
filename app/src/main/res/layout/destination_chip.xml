<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/destination_chip_normal_layout_margin"
        android:elevation="@dimen/destination_chip_normal_layout_elevation"
        card_view:cardCornerRadius="@dimen/destination_chip_normal_layout_cardCornerRadius"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/destination_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/destination_chip_normal_layout_album_title_padding"
                android:paddingRight="@dimen/destination_chip_normal_layout_album_title_padding"
                android:paddingTop="@dimen/destination_chip_normal_layout_album_title_padding"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/smallText"
                android:text="@string/app_name"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/destination_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/destination_name"
                android:paddingBottom="@dimen/destination_chip_normal_layout_album_title_padding"
                android:paddingLeft="@dimen/destination_chip_normal_layout_album_title_padding"
                android:paddingRight="@dimen/destination_chip_normal_layout_album_title_padding"
                android:text="@string/app_name"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>